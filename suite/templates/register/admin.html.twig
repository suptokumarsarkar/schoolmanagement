{% extends 'auth.html.twig' %}

{% block title %}Admin Register{% endblock %}

{% block body %}
    <div class="icon text-center">
        <img src="{{ soft("icon") }}" alt="{{ soft("name") }}" width="100px">
    </div>
    <div class="container">
        <header>
            <h1>Register</h1>
            <h4>You Are Registering as Admin, Please don't forget to put right Admin Secret</h4>
        </header>
        {{ form_start(form,{
            'attr':{
                'onSubmit':"loadForm(event,this)"
            }
        }) }}
        <div>

            {# For convenience sake of this snippet, store the errors in a variable #}
            {% set formErrors = form.vars.errors.form.getErrors(true) %}

            {# If there are errors in the form, display them in this unorganized list #}
            {% if formErrors|length %}
                <ul>
                    {% for error in formErrors %}
                        <li class="alert alert-danger">{{ error.message }}</li>
                    {% endfor %}
                </ul>
            {% endif %}


            {{ form_errors(form,{
                row_attr:{
                    class: "alert alert-danger"
                }
            }) }}
        </div>
        <div class="first-page">

            <div class="form-group">
                {{ form_row(form.Email,{
                    attr: {
                        class: 'form-control'
                    },
                    row_attr:{
                        class: 'form-container'
                    },
                    label_attr: {
                        class: 'form-label'
                    }
                }) }}
            </div>
            <div class="form-group">
                {{ form_row(form.Password,{
                    attr: {
                        class: 'form-control'
                    },
                    row_attr:{
                        class: 'form-container'
                    },
                    label_attr: {
                        class: 'form-label'
                    }
                }) }}
            </div>
            <div class="form-group">
                {{ form_row(form.Secret,{
                    attr: {
                        class: 'form-control'
                    },
                    row_attr:{
                        class: 'form-container'
                    },
                    label_attr: {
                        class: 'form-label'
                    }
                }) }}
            </div>



            <div class="form-group" style="overflow: hidden">
                {{ form_row(form.Register,{
                    attr: {
                        class: 'btn btn-info'
                    },
                    row_attr:{
                        class: 'form-container'
                    },
                    label_attr: {
                        class: 'form-label'
                    }
                }) }}

                <div class="float-right">
                    <a href="{{ url("app_login") }}" class="btn btn-link">Login</a>
                    <a href="{{ url("register_student") }}" class="btn btn-link">Guardian Register</a>
                </div>
            </div>
        </div>
        <style>
            .possibleDate .single {
                width: 30%;
                display: inline-block;
                margin: 1%;
            }
        </style>

        {{ form_end(form) }}
    </div>
{% endblock %}

